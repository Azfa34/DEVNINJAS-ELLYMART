<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AdminRegistration">

    <EditText
        android:id="@+id/etAdminName"
        android:layout_width="321dp"
        android:layout_height="61dp"
        android:layout_marginTop="80dp"
        android:hint="Name"

        />

    <EditText
        android:id="@+id/etAdminEmail"
        android:layout_width="321dp"
        android:layout_height="61dp"
        android:layout_below="@id/etAdminName"
        android:layout_marginTop="25dp"
        android:hint="Admin Email" />

    <Button
        android:id="@+id/btnRegisterAdmin"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdminPassword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Create Account" />

    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="321dp"
        android:layout_height="61dp"
        android:layout_below="@id/etAdminEmail"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdminPassword"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Login" />

</RelativeLayout>