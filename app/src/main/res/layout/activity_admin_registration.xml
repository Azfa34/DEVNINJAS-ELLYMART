<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Customer.AdminRegistration">

    <EditText
        android:id="@+id/etAdminName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin Name" />

    <EditText
        android:id="@+id/etAdminEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdminName"
        android:layout_marginTop="51dp"
        android:hint="Admin Email" />

    <Button
        android:id="@+id/btnRegisterAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdminPassword"
        android:layout_marginTop="351dp"
        android:text="Register" />

    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdminEmail"
        android:layout_marginTop="60dp"
        android:hint="Password"
        android:inputType="textPassword" />

</RelativeLayout>